- edit ||= false
- collapsed = session[:lead_contact].nil? # && @lead.errors.empty?
= subtitle :lead_contact, collapsed, t(:contact_info)
.section
  %small#lead_contact_intro{ hidden_if(!collapsed) }
    = t(:intro, t(:lead_info_small)) unless edit
  #lead_contact{ hidden_if(collapsed) }
    %table
      %tr
        %td
          .label #{t :phone}:
          = f.text_field :phone, class: "customInputsLeads"
        %td= spacer
        %td
          .label #{t :mobile}:
          = f.text_field :mobile, class: "customInputsLeads"
      %tr
        %td
          .label #{t :alt_email}:
          = f.text_field :alt_email, class: "customInputsLeads"
        
      %tr
        %td
          = render "shared/address", f: f, asset: @lead, type: 'business', title: :address
        %td= spacer
        %td
          .label #{t :referred_by}:
          = f.text_field :referred_by, class: "customInputsLeads"
          %div{style: "margin-top:10px"}
            .check_box
              = f.check_box :do_not_call, {}, true
              #{t :do_not_call}
